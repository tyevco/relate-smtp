# GitHub Container Registry (for docker-compose.ghcr.yml)
GITHUB_REPOSITORY=tyevco/relate-smtp
IMAGE_TAG=latest

# Database Configuration (PostgreSQL)
ConnectionStrings__DefaultConnection=host=postgres;port=5432;database=relate-smtp;user id=postgres;password=postgres

# OIDC Authentication (optional - leave empty for dev mode)
# Backend API Configuration
OIDC_AUTHORITY=
OIDC_AUDIENCE=

# Frontend Web UI OIDC Configuration (runtime)
# These are injected into config.json at container startup
# OIDC_CLIENT_ID=your-client-id
# OIDC_REDIRECT_URI=https://your-domain.com
# OIDC_SCOPE=openid profile email

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80

# SMTP Server Configuration
SMTP_SERVER_NAME=smtp.yourdomain.com
SMTP_PORT=587
SMTP_SECURE_PORT=465
SMTP_REQUIRE_AUTHENTICATION=true

# POP3 Server Configuration
POP3_SERVER_NAME=pop3.yourdomain.com
POP3_PORT=110
POP3_SECURE_PORT=995
POP3_REQUIRE_AUTHENTICATION=true

# SSL/TLS Certificates (optional)
# POP3_CERTIFICATE_PATH=/certs/certificate.pfx
# POP3_CERTIFICATE_PASSWORD=your-cert-password
